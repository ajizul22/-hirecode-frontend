<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="30dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_dialog_transparant">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.1"
            android:text="Select your role :"
            android:gravity="center"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/title"
            app:layout_constraintRight_toRightOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title">

            <TextView
                android:id="@+id/tv_engineer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.1"
                android:text="Engineer"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="@id/engineer"
                app:layout_constraintRight_toRightOf="@id/engineer"
                app:layout_constraintBottom_toTopOf="@id/engineer"/>

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.1"
                android:text="Company"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="@id/company"
                app:layout_constraintRight_toRightOf="@id/company"
                app:layout_constraintBottom_toTopOf="@id/company"/>

            <ImageView
                android:id="@+id/engineer"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_engineer"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_engineer"/>

            <ImageView
                android:id="@+id/company"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_company"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toRightOf="@id/engineer"
                android:layout_marginLeft="50dp"
                app:layout_constraintTop_toBottomOf="@id/tv_company"/>


        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>