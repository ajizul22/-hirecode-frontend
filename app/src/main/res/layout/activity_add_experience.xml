<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:title="Experience"
            app:titleTextColor="#fff"
            android:layout_height="?android:actionBarSize"
            android:background="@color/pinkPasta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:targetApi="lollipop" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_layout_white_radius"
                android:layout_margin="15dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar">

                <TextView
                    android:id="@+id/tv_experience"
                    android:text="Add Experience"
                    android:textColor="@color/navy"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    />

                <View
                    android:id="@+id/v_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="@color/grey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_experience"
                    android:layout_marginTop="18dp"
                    />

                <TextView
                    android:id="@+id/tv_position"
                    android:text="Position"
                    android:textColor="@color/navy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/v_experience"
                    app:layout_constraintLeft_toLeftOf="@id/et_position"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp" />

                <EditText
                    android:id="@+id/et_position"
                    android:hint="Web developer"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_field_editprofile"
                    app:layout_constraintTop_toBottomOf="@id/tv_position"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="15dp" />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:text="Company name"
                    android:textColor="@color/navy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/et_position"
                    app:layout_constraintLeft_toLeftOf="@id/et_position"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="5dp" />

                <EditText
                    android:id="@+id/et_company_name"
                    android:hint="PT Harus Bisa"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_field_editprofile"
                    app:layout_constraintTop_toBottomOf="@id/tv_company_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="15dp" />

                <TextView
                    android:id="@+id/tv_month_year"
                    android:text="Month/Year"
                    android:textColor="@color/navy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/et_company_name"
                    app:layout_constraintLeft_toLeftOf="@id/et_company_name"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="5dp" />

                <EditText
                    android:id="@+id/et_month_year"
                    android:hint="Januari 2018"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_field_editprofile"
                    app:layout_constraintTop_toBottomOf="@id/tv_month_year"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="15dp" />

                <TextView
                    android:id="@+id/tv_short_desc_exp"
                    android:text="Short Description"
                    android:textColor="@color/navy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/et_month_year"
                    app:layout_constraintLeft_toLeftOf="@id/et_month_year"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="5dp" />

                <EditText
                    android:id="@+id/et_short_desc_exp"
                    android:hint="description your job"
                    android:textColorHint="@color/navy"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:gravity="top"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_field_editprofile"
                    app:layout_constraintTop_toBottomOf="@id/tv_short_desc_exp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="15dp"
                    />

                <View
                    android:id="@+id/v_desc"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:background="@color/grey"
                    app:layout_constraintLeft_toLeftOf="@id/et_short_desc_exp"
                    app:layout_constraintRight_toRightOf="@id/et_short_desc_exp"
                    app:layout_constraintTop_toBottomOf="@id/et_short_desc_exp"
                    android:layout_marginTop="25dp"
                    />

                <Button
                    android:id="@+id/btn_add_exp"
                    android:background="@drawable/radiusbutton"
                    android:text="Add Experience"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/v_desc"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="15dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>