<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_layout_white_radius">

        <ImageView
            android:id="@+id/iv_project"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/port1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_project_title"
            android:text="Membuat Aplikasi Dice Roller "
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:layout_width="200dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_project"
            app:layout_constraintLeft_toRightOf="@id/iv_project"
            android:layout_marginRight="15dp"/>
        
        <TextView
            android:id="@+id/tv_project_company"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="PT. Tokopedia"
            android:textSize="13sp"
            app:layout_constraintRight_toRightOf="@id/tv_project_title"
            app:layout_constraintLeft_toLeftOf="@id/tv_project_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_project_title"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_project_deadline"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Deadline: May 2019"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/tv_project_company"
            app:layout_constraintLeft_toLeftOf="@id/tv_project_title"
            app:layout_constraintRight_toRightOf="@id/tv_project_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"/>

        



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>