<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:title="Detail Project"
            app:titleTextColor="#fff"
            android:layout_height="?android:actionBarSize"
            android:background="@color/pinkdark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:targetApi="lollipop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_layout_white_radius"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_project"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/port1"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_title_pj"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Membuat Contoh Aplikasi"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_company_pj"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="PT. Contoh"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_desc_pj"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/lorem_long2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tv_deadline_pj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadine Month Year"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/holo_red_dark"/>




        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>