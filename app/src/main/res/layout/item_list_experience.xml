<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_layout_white_radius"
       >

        <ImageView
            android:id="@+id/iv_icon"
            android:src="@drawable/tokopedia"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tv_job_type_ex"
            android:text="Engineer"
            android:textColor="@color/navy"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_icon"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/tv_company"
            android:text="Tokopedia"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/navy"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_job_type_ex"
            app:layout_constraintLeft_toLeftOf="@id/tv_job_type_ex"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_month_range"
            android:text="July 2019 - January 2019"
            android:fontFamily="sans-serif-light"
            android:textColor="#575757"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_company"
            app:layout_constraintLeft_toLeftOf="@id/tv_company"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_duration"
            android:text="6 Month"
            android:fontFamily="sans-serif-light"
            android:textColor="#575757"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_month_range"
            app:layout_constraintLeft_toLeftOf="@id/tv_month_range"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_desc_ex"
            android:text="@string/lorem_long2"
            android:textColor="@color/navy"
            android:textSize="15sp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_duration"
            app:layout_constraintLeft_toLeftOf="@id/tv_duration"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="5dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>